{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
	"dev:web": "cd apps/web && yarn dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
	"shadcn": "cd packages/ui && npx shadcn-ui add",
	"add:ui": "cd packages/ui && yarn add"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
